<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body>
    <header class="header">
      <img
        src="./images/location.png"
        class="header__image"
        width="50"
        height="50"
        alt="an image of a map and location"
      />
      <h1 class="header__title">GeoTagApp</h1>
      <nav class="header__navigation">
        <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
      </nav>
    </header>

    <main class="main">
      <container>
        <div class="row">
          <div class="col-2">
            <section class="main__tagging tagging">
              <h2>Tagging</h2>

              <!-- ############### VS1Lab 1a Form 1 Start -->
              <form id="tag-form" action="/tagging" method="post">
                <fieldset>
                  <legend>Add a new GeoTag</legend>
                  <label for="latitude">Latitude:</label>
                  <input type="text" id="latitude" name="latitude" readonly value="<%= latitude %>"/>
                  <label for="longitude">Longitude:</label>
                  <input type="text" id="longitude" name="longitude" readonly value="<%= longitude %>"/>
                  <label for="name">Name:</label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    maxlength="10"
                    placeholder="e.g. Central Berlin"
                  />
                  <label for="hashtag">Hashtag:</label>
                  <input
                    type="text"
                    id="hashtag"
                    name="hashtag"
                    pattern="#.+"
                    maxlength="11"
                    placeholder="e.g. #ber"
                  />
                  <input type="submit" value="Add tag" />
                </fieldset>
              </form>
              <!-- ############### VS1Lab 1a Form 1 End -->
            </section>
          </div>
          <div class="col-10">
            <section class="main__discovery discovery">
              <h2 class="discovery__title">Discovery</h2>
              <div class="row">
                <!-- ############### VS1Lab 1a Form 2 Start -->
                <form
                  class="discovery__search"
                  id="discoveryFilterForm"
                  action="/discovery"
                  method="post"
                >
                  <fieldset>
                    <legend>Search</legend>
                    <label for="latitude">Search term or keywords:</label>
                    <input
                      type="text"
                      id="searchterm"
                      name="searchterm"
                      placeholder="e.g. Berlin"
                    />
                    <input
                      type="hidden"
                      id="hiddenLatitude"
                      name="hiddenLatitude"
                      value="<%= latitude %>"
                    />
                    <input
                      type="hidden"
                      id="hiddenLongitude"
                      name="hiddenLongitude"
                      value="<%= longitude %>"
                    />
                    <input type="submit" value="Search" />
                  </fieldset>
                </form>
                <!-- ############### VS1Lab 1a Form 2 End -->
              </div>
              <div class="row discovery__wrapper">
                <div class="col-4 discovery__taglist">
                    <ul class="discovery__results" id="discoveryResults">
                        <% if (data.records !== undefined) data.records.forEach(function(gtag) { %>
                            <li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
                        <% }); %>
                    </ul>
                    <span>
                      <div id="pagination" style="display: none; justify-content: center; align-items: center;" >
                        <button id="paginationBack"><</button>
                        <span id="paginationText"><%= data.page %>/<%= data.pageCount %> (<%= data.totalRecordCount %>)</span>
                        <button id="paginationNext">></button>
                      </div>
                    </span>
                </div>
                <div class="col-8">
                    <div class="discovery__map">
                      <img
                        src="./images/mapview.jpg"
                        data-tags="<%= JSON.stringify(data.records) %>"
                        alt="a map with locations"
                        id="mapView"
                      />
                      <span>Result map</span>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </container>
    </main>

    <footer class="footer">
      <span>(c) 2021/22 HKA_IWI_VSYS</span>
    </footer>
    <script src="./javascripts/location-helper.js"></script>
    <script src="./javascripts/map-manager.js"></script>
    <script src="./javascripts/geotagging.js"></script>
  </body>
</html>

